<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue_grey_800">

    <TextView android:text="@string/title_activity_exercise"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/background_material_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exerciseTitle" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
         <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:text="Exercise duration in hours"
             android:textColor="@color/background_material_light"
              android:id="@+id/hoursTextView" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/hoursEditText"
            android:textColor="@color/background_material_light"
            android:layout_weight="1" /><![CDATA[

        />

    ]]>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/background_material_light"
        android:layout_marginTop="10dp">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Intensity rating (1 - Easy.. 5 - Hard)"
            android:textColor="@color/background_material_light"
        android:id="@+id/intensityTextView" />

    />
    </LinearLayout>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intensityRatingBar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Save and add another Exercise"
        android:textColor="@color/background_material_light"
        android:id="@+id/anotherButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/intensityRatingBar"
        android:layout_alignEnd="@+id/intensityRatingBar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Save and return to Daily Diary"
        android:textColor="@color/background_material_light"
        android:id="@+id/nextButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/intensityRatingBar"
        android:layout_alignEnd="@+id/intensityRatingBar" />



</LinearLayout>