<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/material_blue_grey_800"
    tools:context="uk.ac.bradford.findmymigraine.FoodDrinkActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Drinks Consumed"
        android:id="@+id/headerCoping"
        android:textColor="@color/background_material_light"
        android:layout_alignParentTop="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beer"
        android:id="@+id/beerCB"
        android:checked="false"
        android:layout_below="@+id/headerCoping"
        android:layout_alignParentLeft="true"
        android:textColor="@color/background_material_light"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red Wine"
        android:id="@+id/redWineCB"
        android:layout_below="@+id/beerCB"
        android:layout_alignLeft="@+id/beerCB"
        android:layout_alignStart="@+id/beerCB"
        android:textColor="@color/background_material_light"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="White Wine"
        android:id="@+id/whiteWineCB"
        android:layout_below="@+id/redWineCB"
        android:layout_alignLeft="@+id/redWineCB"
        android:layout_alignStart="@+id/redWineCB"
        android:textColor="@color/background_material_light"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spirit"
        android:id="@+id/spiritCB"
        android:checked="false"
        android:layout_below="@+id/whiteWineCB"
        android:textColor="@color/background_material_light"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soda"
        android:id="@+id/sodaCB"
        android:checked="false"
        android:textColor="@color/background_material_light"
        android:layout_above="@+id/redWineCB"
        android:layout_toRightOf="@+id/headerCoping"
        android:layout_toEndOf="@+id/headerCoping" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coffee"
        android:id="@+id/coffeeCB"
        android:checked="false"
        android:textColor="@color/background_material_light"
        android:layout_above="@+id/whiteWineCB"
        android:layout_toRightOf="@+id/headerCoping"
        android:layout_toEndOf="@+id/headerCoping" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tea"
        android:id="@+id/teaCB"
        android:checked="false"
        android:textColor="@color/background_material_light"
        android:layout_below="@+id/coffeeCB"
        android:layout_toRightOf="@+id/headerCoping"
        android:layout_toEndOf="@+id/headerCoping" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Food Consumed"
        android:id="@+id/textView3"
        android:textColor="@color/background_material_light"
        android:layout_above="@+id/chocolateCB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/foodDrinkNextButton"
        android:textColor="@color/background_material_light"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chocolate"
        android:id="@+id/chocolateCB"
        android:textColor="@color/background_material_light"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheese"
        android:id="@+id/cheeseCB"
        android:textColor="@color/background_material_light"
        android:layout_below="@+id/chocolateCB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuts"
        android:id="@+id/nutsCB"
        android:textColor="@color/background_material_light"
        android:layout_below="@+id/cheeseCB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Citrus Fruits"
        android:id="@+id/citrusFruitsCB"
        android:layout_alignTop="@+id/chocolateCB"
        android:layout_toRightOf="@+id/headerCoping"
        android:layout_toEndOf="@+id/headerCoping"
        android:textColor="@color/background_material_light"
        android:checked="false" />

</RelativeLayout>
