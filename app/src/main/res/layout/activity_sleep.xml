    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/sleep_r"
        android:id="@+id/lbSR"
        android:textColor="@color/background_material_light"
         />
    </LinearLayout>

    <RatingBar
        android:id="@+id/ratingBarSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
         />



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Add travel"
        android:id="@+id/btnTravel"
        android:layout_alignParentBottom="true"
        android:textColor="@color/background_material_light"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Add exercise"
        android:id="@+id/btnExercise"
        android:textColor="@color/background_material_light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Add food and drink"
            android:id="@+id/btnFoodDrink"
            android:textColor="@color/background_material_light"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Menstrual cycle"
            android:id="@+id/btnMenstrual"
            android:textColor="@color/background_material_light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Add work"
            android:id="@+id/btnWork"
            android:textColor="@color/background_material_light"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Add mood"
            android:id="@+id/btnMood"
            android:textColor="@color/background_material_light"/>
    </LinearLayout>

    <!-- NEXT BUTTON -->
    <Button
